{% extends 'base.html.twig' %}

{% block title %}Pointage index{% endblock %}

{% block body %}
    <h1>Pointage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pointage in pointages %}
            <tr>
                <td>{{ pointage.id }}</td>
                <td>{{ pointage.Date ? pointage.Date|date('Y-m-d') : '' }}</td>
                <td>{{ pointage.Duree ? pointage.Duree|date('H:i') : '' }}</td>
                <td>
                    <a href="{{ path('pointage_show', {'id': pointage.id}) }}">show</a>
                    <a href="{{ path('pointage_edit', {'id': pointage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pointage_new') }}">Create new</a>

{% endblock %}
